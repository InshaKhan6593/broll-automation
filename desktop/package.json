{
  "name": "humanitarian-editor-desktop",
  "version": "1.0.0",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.humanitarian.editor",
    "productName": "Humanitarian Video Editor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video",
      "identity": null,
      "artifactName": "${productName}-${version}-macOS-Universal.${ext}"
    },
    "files": [
      "main/**/*",
      "preload/**/*",
      "renderer/**/*",
      "prompts/**/*",
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!__pycache__/**/*"
        ]
      },
      {
        "from": "backend-dist-arm64",
        "to": "backend-dist-arm64"
      },
      {
        "from": "backend-dist-x64",
        "to": "backend-dist-x64"
      }
    ]
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
