{
  "name": "humanitarian-editor-desktop",
  "version": "1.0.0",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.humanitarian.editor",
    "productName": "Humanitarian Video Editor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video"
    },
    "extraResources": [
      {
        "from": "backend-dist",
        "to": "backend-dist",
        "filter": ["**/*"]
      },
      {
        "from": "renderer",
        "to": "renderer",
        "filter": ["**/*"]
      },
      {
        "from": "prompts",
        "to": "prompts",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^25.1.8"
  }
}
